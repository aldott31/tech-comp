<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Tech Map User Group -->
        <record id="group_tech_map_user" model="res.groups">
            <field name="name">Tech Map / User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Can view tech companies</field>
        </record>

        <!-- Tech Map Manager Group -->
        <record id="group_tech_map_manager" model="res.groups">
            <field name="name">Tech Map / Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_tech_map_user'))]"/>
            <field name="comment">Can create, edit, and delete tech companies</field>
        </record>

        <!-- Record Rules -->

        <!-- Public users can see only active and verified companies -->
        <record id="tech_company_public_rule" model="ir.rule">
            <field name="name">Tech Company: Public Access</field>
            <field name="model_id" ref="model_tech_company"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Portal users can see only active and verified companies -->
        <record id="tech_company_portal_rule" model="ir.rule">
            <field name="name">Tech Company: Portal User Access</field>
            <field name="model_id" ref="model_tech_company"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Tech Map users can see all active companies -->
        <record id="tech_company_user_rule" model="ir.rule">
            <field name="name">Tech Company: User Access</field>
            <field name="model_id" ref="model_tech_company"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_tech_map_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Tech Map managers can see and edit everything -->
        <record id="tech_company_manager_rule" model="ir.rule">
            <field name="name">Tech Company: Manager Full Access</field>
            <field name="model_id" ref="model_tech_company"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_tech_map_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
